# =============================================================================
# MAIA Application Environment Configuration
# =============================================================================

# =============================================================================
# CLOUDANT DATABASE CONFIGURATION
# =============================================================================
CLOUDANT_URL=https://your-cloudant-instance-bluemix.cloudantnosqldb.appdomain.cloud
CLOUDANT_USERNAME=apikey-v2-your-cloudant-username-here
CLOUDANT_PASSWORD=your-cloudant-password-here
CLOUDANT_DASHBOARD=https://your-cloudant-instance-bluemix.cloudant.com/dashboard.html
# This link is posted at the bottom of the Admin Page for convenience  /_all_dbs
# CLOUDANT_DATABASE=maia_chats
# =============================================================================
# DIGITALOCEAN CONFIGURATION
# =============================================================================
DIGITALOCEAN_BASE_URL=https://api.digitalocean.com
DIGITALOCEAN_TOKEN=dop_v1_your-digitalocean-token-here
# DIGITALOCEAN_GENAI_ENDPOINT=https://your-agent-id.agents.do-ai.run/api/v1
# DIGITALOCEAN_AGENT_UUID=your-agent-uuid-here
# DIGITALOCEAN_PERSONAL_API_KEY=your-personal-api-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
APP_TITLE=MAIA Local
APP_VERSION=1.0.0

# =============================================================================
# PASSKEY AUTHENTICATION
# =============================================================================
PASSKEY_RPID=localhost
PASSKEY_ORIGIN=http://localhost:3001
DOMAIN=localhost
SESSION_SECRET=your-session-secret-here
ADMIN_USERNAME=your-admin-secret-here
ADMIN_SECRET=your-admin-secret-here
ADMIN_BASE_URL=http://localhost:3001

DIGITALOCEAN_ACCESS_KEY=your-digitalocean-access-key-here
DIGITALOCEAN_SECRET_KEY=your-digitalocean-secret-key-here
DIGITALOCEAN_BUCKET=https://your-bucket.tor1.digitaloceanspaces.com
DIGITALOCEAN_AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
DIGITALOCEAN_AWS_SECRET_ACCESS_KEY=your-digitalocean-secret-key-here
DIGITALOCEAN_ENDPOINT_URL=https://tor1.digitaloceanspaces.com

# =============================================================================
# EMAIL AUTHENTICATION
# =============================================================================

RESEND_API_KEY=re_your-resend-api-key-here
RESEND_FROM_EMAIL=your-from-email@yourdomain.com
RESEND_ADMIN_EMAIL=your-admin-email@yourdomain.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760
MAX_FILES=5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_FILE=logs/maia.log

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_FILE_UPLOAD=true
ENABLE_CHAT_HISTORY=true
ENABLE_KNOWLEDGE_BASE=true
ENABLE_AGENT_MANAGEMENT=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# AI PROVIDERS (Optional)
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key-here
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
CHATGPT_API_KEY=sk-proj-your-chatgpt-api-key-here

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGIN=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4000,http://localhost:5173
ENABLE_REQUEST_LOGGING=true
VITE_API_BASE_URL=/api

# =============================================================
# DEFAULT AGENT CONFIGURATION
# =============================================================
DEFAULT_AGENT=your-default-agent-name-here
